<div id="body">
    
    <h2>Cards</h2>
    <ol id="CardList"></ol>
    <input type="button" value="Get All" id="getCards" />


    <h2>Update Card Values</h2>
    <input type="text" id="updateCardId" placeholder="Card Id" />
    <br/>
    <h2>Attack</h2>
    <input type="text" id="updateCardAttack" value="0"/>
    <br/>
    <h2>Health</h2>
    <input type="text" id="updateCardHealth" value="0" />
    <br/>
    <h2>Mana Cost</h2>
    <input type="text" id="updateCardMana" value="0" />
    <br/>
    <input type="button" id="updateButton" value="Update Card" />





    <h2>Get Single Card</h2>
    <input type="text" id="cardId" placeholder="Card ID" />

    <div id="Card"></div>
    <input type="button" value="Get Card" id="getCard"/>
    
    <h2>Add New Card</h2>
    <input type="text" id="newCardId" placeholder="Card ID" />
    <br />
    <input type="text" id="newCardName" placeholder="Name" />
    <br />

    <input type="text" id="newCardAttack" placeholder="Attack" />
    <br/>
    <input type="text" id="newCardHealth" placeholder="Health"/>
    <br/>
    <input type="text" id="newCardMana" placeholder="Mana" />
    <br/>

    <input type="button" value="Save New Card" id="saveNewCard" />

    <h2>Delete Card</h2>
    <input type="text" id="deleteCardID" placeholder="Card ID" /> 
    <br />
    <input type="button" value="Delete Card" id="deleteCard"/>
</div>
